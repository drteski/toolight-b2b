generator client {
    provider = "prisma-client-js"
    output   = "../app/generated/prisma"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Product {
    id          Int           @id
    active      Boolean
    ean         String
    sku         String
    producer    String
    images      String[]
    url         String
    attributes  Json[]
    title       Title[]
    description Description[]
    category    Category[]
    createdAt   DateTime      @default(now())
    updatedAt   DateTime      @default(now()) @updatedAt
}

model Title {
    id        Int      @id @default(autoincrement())
    lang      String
    value     String
    Product   Product  @relation(fields: [productId], references: [id])
    productId Int
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt
}

model Description {
    id        Int      @id @default(autoincrement())
    lang      String
    value     String
    Product   Product  @relation(fields: [productId], references: [id])
    productId Int
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt
}

model Category {
    id        Int       @id @default(autoincrement())
    lang      String
    name      String
    product   Product[]
    createdAt DateTime  @default(now())
    updatedAt DateTime  @default(now()) @updatedAt
}

model Attribute {
    id        Int      @id @default(autoincrement())
    lang      String
    name      String
    value     String
    createdAt DateTime @default(now())
    updatedAt DateTime @default(now()) @updatedAt
}
